{
    "name": "amitkhare/easy-authentication",
    "description": "Easy Authentication is an easy and simple PHP authentication library",
    "homepage": "http://github.com/amitkhare/easy-authentication",
    "license": "MIT",
    "autoload":{
        "psr-4":{
            "AmitKhare\\":"src/"
        }
    },
    "authors": [
        {
            "name": "Amit Kumar Khare",
            "email": "me.amitkhare@gmail.com"
        }
    ],

    "minimum-stability": "stable",
    
    "require": {
        "php": ">=5.5.0",
        "amitkhare/easy-validation": "^0.5.8",
        "amitkhare/easy-translator": "^0.1.2",
        "illuminate/database": "^5.5",
        "kint-php/kint": "^2.2",
        "vlucas/phpdotenv": "^2.4",
        "amitkhare/easy-session": "^0.0",
        "psr/http-message": "^1.0",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "scripts": {
		"post-root-package-install": [
			"php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		]
	}
}
